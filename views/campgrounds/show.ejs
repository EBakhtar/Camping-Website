<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3" style="padding-bottom:20px">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            <div id='map' style='width: 100%; height: 300px;'>
            </div>
            <script>
                mapboxgl.accessToken = 'pk.eyJ1IjoiZWJyYWhpbWIiLCJhIjoiY2p0em10aXNmMm5tdzQ0cW56MzE5enlzbiJ9.nzH3pA4_mAumo2srACrjag';
                var map = new mapboxgl.Map({
                    container: 'map',
                    style: 'mapbox://styles/mapbox/streets-v9',
                    center: [-69.3141, -18.2315],
                    zoom: 10
                });
            </script>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img id="show-img" class="img-responsive" src="<%=campground.image%>">
                <div class="caption-full">
                    <h4 class="pull-right">Â£<%= campground.price %> per night</h4>
                    <h4><a><%=campground.name%></a></h4>
                    <p><%= campground.description %></p>
                    <p>
                        <em>Submitted by: <%=campground.author.username%></em>
                    </p>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                        <form class="delete-form" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){%>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%=comment.author.username%></strong>
                        <span class="pull-right">10 days ago</span>
                        <p>
                            <%=comment.text%>
                        </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" 
                           href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">
                           Edit
                        </a>
                        <form class="delete-form" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                            <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                        </form>
                        <% } %>
                    </div>
                </div>
                <% }) %>
            </div>
            <a href="/campgrounds">Back to all campgrounds</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>