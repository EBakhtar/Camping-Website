<% include ../partials/header%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new campsite</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class ="form-control" type="text" name="campground[name]" placeholder="Campsite name">
            </div>
            <div class="form-group">
                <input class ="form-control" type="number" name="campground[price]" placeholder="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input id="image" type="file" name="image" accept"image/*" required>
            </div>
            <div class="form-group">            
                <input class ="form-control" type="text" name="campground[description]" placeholder="Description">
            </div>
            <div class="form-group">
                <button class="btn btn-large btn-primary btn-block">Submit</button>                
            </div>
            </form>
            <a href="/campgrounds">Go back to all Campsites</a>
        </div>
    </div>
</div>
<% include ../partials/footer%>